<?xml version="1.0"?>

<Component
    Name="NetworkCannonComponent"
    Namespace="MultiplayerSample"
    OverrideComponent="true"
    OverrideController="true"
    OverrideInclude="Source/Components/NetworkCannonComponent.h"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <Include File="Source/MultiplayerSampleTypes.h"/>

    <ComponentRelation Constraint="Required" HasController="true" Name="NetworkTransformComponent" Namespace="Multiplayer" Include="Multiplayer/Components/NetworkTransformComponent.h" />

    <RemoteProcedure Name="OnHit"
        InvokeFrom="Authority"
        HandleOn="Client"
        IsPublic="true"
        IsReliable="true"
        GenerateEventBindings="false"
        Description="The cannon cannon made a hit; tell clients so they can play particle fx">
    </RemoteProcedure>


    <ArchetypeProperty Type="AZ::Vector3" Name="Velocity"  Init="AZ::Vector3(1.0f, 0.0f, 0.0f)" ExposeToEditor="true" Description="Cannon ball movement velocity."/>
    <ArchetypeProperty Type="float" Name="SelfDestructTime"  Init="10.0f" ExposeToEditor="true" Description="Timeout so the cannon ball doesn't travel forever into space."/>
    <ArchetypeProperty Type="AZ::Data::Asset&lt;AzFramework::Spawnable&gt;" Name="OnHitParticleFx" Init="" ExposeToEditor="true" />
</Component>
