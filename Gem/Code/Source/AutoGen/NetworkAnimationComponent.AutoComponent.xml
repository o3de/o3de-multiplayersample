<?xml version="1.0"?>

<Component
    Name="NetworkAnimationComponent"
    Namespace="MultiplayerSample"
    OverrideComponent="true"
    OverrideController="false"
    OverrideInclude="Source/Components/NetworkAnimationComponent.h"
